{
  "name": "moda_kids",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:dafiti": "node scripts/buildLotes.js dafiti",
	"build:nike": "node scripts/buildLotes.js nike",
	"build:centauro": "node scripts/buildLotes.js centauro",
    "build:voucher": "node scripts/buildLotes.js voucher",
    "merge:dafiti": "node scripts/mesclarOutros.js dafiti",
	"merge:nike": "node scripts/mesclarOutros.js nike",
	"merge:centauro": "node scripts/mesclarOutros.js centauro",
    "merge:voucher": "node scripts/mesclarOutros.js voucher",
	"build:all":"npm run build:dafiti && npm run build:centauro && npm run build:nike  && npm run build:voucher",
	"merge:all":"npm run merge:dafiti && npm run merge:centauro && npm run merge:nike  && npm run merge:voucher",
    "categorias": "node scripts/gerarCategorias.js",
    "build:cuponsawin": "node scripts/gerarCuponsAwin.js ",
    "build-xml-to-json": "node scripts/gerarProdutosJson.js",
    "build-slugs:gerar": "node scripts/gerarSlugIndex.js ",
    "build-slugs:quebrar": " node scripts/quebrarSlugsPorMarca.js",
    "build-slugs": "npm run build:cuponsawin && npm run build-slugs:gerar && npm run build-slugs:quebrar ",
    "build-sitemap": "npx next-sitemap --config next-sitemap.config.cjs",
    "dev": "next dev --turbopack",
    "prod": "serve out",
    "build": "npm run build-xml-to-json && npm run build-slugs && npm run categorias && next build && npm run build:all && npm run merge:all   && npm run build-sitemap && npm run build-feed",
    "build-feed": " node scripts/gerarFeed.js",   
   "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@microsoft/clarity": "^1.0.0",
    "child_process": "^1.0.2",
    "cross-env": "^10.0.0",
    "fs-extra": "^11.3.1",
    "html-entities": "^2.6.0",
    "next": "^15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sitemap": "^8.0.0",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "next-sitemap": "^4.2.3",
    "tailwindcss": "^4"
  }
}
